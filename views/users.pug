doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH",
      crossorigin="anonymous"
    )

    title= titulo

    style.
      body {
        background-color: #f8f9fa;
      }
      .card-title strong {
        color: #0d6efd;
      }

  body
    .container.mt-4
      h1.display-5.mb-4= titulo

      if usuariosParaView && usuariosParaView.length > 0
        .row
          each usuario in usuariosParaView
            .col-md-6.col-lg-4.mb-3
              .card.h-100
                .card-body.d-flex.flex-column
                  h5.card-title
                    strong= usuario.nome
                    small.text-muted.fw-normal
                      |  (ID: #{usuario.id})
                  p.card-text.mb-1
                    | Email: #{usuario.email}
                  p.card-text.flex-grow-1= usuario.descricao
                  a.btn.btn-sm.btn-outline-primary.mt-auto(href="#") Ver Perfil
      else
        .alert.alert-warning(role="alert")
          | Nenhum usuário para exibir no momento.

      hr.my-4

      a.btn.btn-secondary(href="/") Voltar para a página inicial

    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz",
      crossorigin="anonymous"
    )
